<h1>Edit <%= @post.title%>!</h1>

<%= render partial: "layouts/errors", locals: {object: @post} %>
<%= form_for(@post) do |f|%>
  <%= f.label "Choose a brand:" %>
  <%= f.collection_select :brand_id, Category.all, :id, :name, include_blank: true %>


   <p>or create a new brand:
  <%= f.fields_for :brand do |c|%>
    <%= c.text_field :name%>
  <% end %>
  </p>

  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br></br>
  <%= f.label :content %>
  <%= f.text_area :content %>
  
  <%= f.submit %>
<% end %>