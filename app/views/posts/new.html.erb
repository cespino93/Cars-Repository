<h1>New Post!</h1>


<%= render partial: "layouts/errors", locals: {object: @post} %>
<!-- render the errors partial, send it the @post as the 'object' -->

<%= form_for(@post) do |f|%>
  <%= f.label "Choose a brand:" %>
  <%= f.collection_select :brand_id, Brand.all, :id, :name, include_blank: true %>


   <p>Or create a new brand:
  <%= f.fields_for :brand do |c|%>
    <%= c.text_field :name%>
  <% end %>
  </p>

  <br>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br></br>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit %>
<% end %>